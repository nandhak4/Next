 <div class='sticky_tab'>
  <div class='sticky_tab_header'>
    <h1>{{title}}</h1>
  </div>
  <div class="tab-wrap">
  {{#if tabs}}
  {{#each tabs}}
    <input type="radio" name="tabs" id="{{name}}" >
    <div class="tab-label-content">
      <label for="{{name}}">{{name}}</label>
      <div class="tab-content">TAB {{name}}</div>
    </div>
  {{/each}}
    <div class="slide"></div>
  {{/if}}
  </div>
</div>